    {
      "parameters": {
        "jsCode": "// Prepare children with their full paths\nconst items = $input.all();\nconst parentId = $('When Executed by Another Workflow').item.json.folder_id;\nconst parentPath = $('When Executed by Another Workflow').item.json.folder_path;\nconst targetPath = $('When Executed by Another Workflow').item.json.target_path;\n\nconst children = {};\nconst childrenForRecursion = [];\n\nfor (const item of items) {\n  const childId = item.json.id;\n  const childName = item.json.name;\n  const childPath = parentPath + '/' + childName;\n  \n  // Store child as name: id\n  children[childName] = childId;\n  \n  // Only recurse into children that are on the path to target or might contain it\n  if (targetPath.startsWith(childPath)) {\n    childrenForRecursion.push({\n      child_name: childName,  // Added this!\n      folder_id: childId,\n      folder_path: childPath,\n      target_path: targetPath\n    });\n  }\n}\n\n// Cache data\nconst cacheData = {\n  folder_id: parentId,\n  folder_path: parentPath,\n  children: children,\n  last_updated: new Date().toISOString()\n};\n\nreturn {\n  cache_entry: cacheData,\n  recursion_targets: childrenForRecursion\n};"
      },
