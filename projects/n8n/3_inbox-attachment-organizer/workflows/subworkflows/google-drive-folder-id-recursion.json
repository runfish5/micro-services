    {
      "parameters": {
        "jsCode": "// Collect all discovered folders\nconst currentFolder = $('When Executed by Another Workflow').first().json;\n\nfunction deepCollectFolders(input) {\n  if (Array.isArray(input)) {\n    return input.flatMap(deepCollectFolders);\n  }\n  if (input && typeof input === 'object') {\n    if (Array.isArray(input.all)) {\n      return deepCollectFolders(input.all);\n    }\n    if ('folder_id' in input && 'folder_path' in input) {\n      return [{ folder_id: input.folder_id, folder_path: input.folder_path }];\n    }\n    return [];\n  }\n  return [];\n}\n\nconst items = $input.all().map(item => item.json);\nconst descendants = deepCollectFolders(items);\n\nconst all = [\n  { folder_id: currentFolder.folder_id, folder_path: currentFolder.folder_path },\n  ...descendants\n];\n\nreturn { all };"
      },
